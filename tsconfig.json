{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist", "build"],
  "include": ["src/**/*.ts"],
  "compileOnSave": false
}
